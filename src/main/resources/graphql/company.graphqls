type CompanyInfo {
    id: ID!,
    name: String,
    address: String,
    user: User
}

input CompanyInfoInput {
    name: String,
    address: String,
    user: UserInput
}

type Query {
    getCompanies: [CompanyInfo],
    getCompany(id: ID!): CompanyInfo
}

type Mutation {
    createCompany(company: CompanyInfoInput): [CompanyInfo],
    updateCompany(id: ID!, company: CompanyInfoInput): CompanyInfo,
    deleteCompany(id: ID!): [CompanyInfo],
    deleteCompanies: [CompanyInfo]
}